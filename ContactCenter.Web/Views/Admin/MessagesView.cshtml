@using ContactCenter.Core.Models
@using Microsoft.AspNetCore.Identity
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager
@{
	ViewData["Title"] = "Contact Center | Admin";
	Layout = "_Layout";
}
<link href="~/assets/emojionarea/emojionearea.min.css" rel="stylesheet">
<script src="~/assets/emojionarea/emojionearea.1.1.js?ver=1.3"></script>

<p class="app-sidebar__heading">Mensagens</p>

<div class="row">
	<div class="col-md-12">

		<table id="messages-grid" class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Tipo</th>
					<th>Título</th>
					<th>Criação</th>
					<th style="text-align: right;">
						Ação
						<a title="Nova Mensagem"
						   data-toggle="modal"
						   data-target="#modal-message"
						   class="add-row btn btn-primary"
						   aria-describedby="Nova mensagem"
						   onclick="clearMessageModal()">
							<i class="fa fa-plus"></i>
						</a>
					</th>
				</tr>
			</thead>
			<tbody>
			</tbody>
		</table>
	</div>
</div>

<script src="~/assets-admin/scripts/Messages.js?ver=1.25"></script>

